<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/_money_dialog_money"
        android:layout_width="match_parent"
        android:layout_height="160dip"
        android:gravity="center"
        android:hint="输入金额"
        android:textColor="@android:color/black"
        android:textSize="50sp" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/_money_dialog_recycler"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_below="@+id/_money_dialog_money">

    </android.support.v7.widget.RecyclerView>


    <RelativeLayout
        android:id="@+id/_money_dialog_lin"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:visibility="gone"
        android:layout_below="@+id/_money_dialog_recycler">

        <ImageView
            android:id="@+id/_money_dialog_show"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="30dip"
            android:layout_marginTop="2dip"
            android:src="@drawable/ic_xianjin" />

        <TextView
            android:id="@+id/_money_dialog_type"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="26sp"
            tools:text="现金" />

    </RelativeLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="320dip"
        android:layout_below="@+id/_money_dialog_lin"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/_money_add_date"
                android:gravity="center"
                android:text="今日"
                android:textColor="@android:color/black"
                android:textSize="25dip" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_below="@id/_money_dialog_recycler"
            android:background="#626060" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/_money_dialog_7"
                android:layout_weight="1"
                android:text="7" />

            <Button
                android:id="@+id/_money_dialog_8"
                android:layout_weight="1"
                android:text="8" />

            <Button
                android:id="@+id/_money_dialog_9"
                android:layout_weight="1"
                android:text="9" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/_money_dialog_4"
                android:layout_weight="1"
                android:text="4" />

            <Button
                android:id="@+id/_money_dialog_5"
                android:layout_weight="1"
                android:text="5" />

            <Button
                android:id="@+id/_money_dialog_6"
                android:layout_weight="1"
                android:text="6" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/_money_dialog_1"
                android:layout_weight="1"
                android:text="1" />

            <Button
                android:id="@+id/_money_dialog_2"
                android:layout_weight="1"
                android:text="2" />

            <Button
                android:id="@+id/_money_dialog_3"
                android:layout_weight="1"
                android:text="3" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/_money_dialog_d"
                android:layout_weight="1"
                android:text="." />

            <Button
                android:id="@+id/_money_dialog_0"
                android:layout_weight="1"
                android:text="0" />

            <Button
                android:id="@+id/_money_dialog_del"
                android:layout_weight="1"
                android:text="删除" />

        </TableRow>
    </TableLayout>

</RelativeLayout>
